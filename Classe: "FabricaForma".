package com.mycompany.mavenproject1;

/**
 *
 * @author ht3000222
 */
public class FabricaForma {
  public static Forma getForma( String tipoForma ) {
    switch(tipoForma){
    case "Quadrado": return new Quadrado();
    case "Triângulo": return new Triângulo();
    case "Pirâmide": return new Pirâmide();
    case "Cubo": return new Cubo(); 
    case "Retângulo": return new Retângulo(); 
    default: return null;  
    }
 }
}
