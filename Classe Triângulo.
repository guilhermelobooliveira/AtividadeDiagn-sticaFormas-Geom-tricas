package com.mycompany.mavenproject1;

import java.util.Scanner;

/**
 *
 * @author ht3000222
 */
public class Triângulo extends Forma{
    
    public Triângulo() {
        
        Scanner scan = new Scanner( System.in );
        System.out.print(" Insira o valor da base do triangulo: ");
        float numeroaltura = scan.nextFloat();
        System.out.print(" Insira o valor da altura do triangulo: ");
        float numerobase = scan.nextFloat();
        System.out.println(" Insira o lado do triangulo: ");
        float numerolado = scan.nextFloat();
        System.out.println(" Área: " + (numeroaltura*numerobase)/2);
        System.out.println(" Perimetro: " + (numerolado*numerolado*numerolado));
        System.out.println(" Volume: " + ((numeroaltura*numerobase)/2)*numerobase*numeroaltura);
        
    }
}
